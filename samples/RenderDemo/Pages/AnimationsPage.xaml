<local:AnimationsPage xmlns="https://github.com/avaloniaui" 
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
  xmlns:local="clr-namespace:RenderDemo.Pages;assembly=RenderDemo" x:Class="RenderDemo.Pages.AnimationsPage">

  <Grid>
    <local:XDataGrid Items="{Binding DataRows}">
      <local:XDataGrid.DataTemplates>
        <DataTemplate DataType="x:Boolean">
          <CheckBox IsChecked="{Binding}"/>
        </DataTemplate>
      </local:XDataGrid.DataTemplates>
    </local:XDataGrid>
  </Grid>

</local:AnimationsPage>
