<Styles xmlns="https://github.com/avaloniaui" 
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
  xmlns:local="clr-namespace:RenderDemo.Pages;assembly=RenderDemo">
  <Style Selector="local|XDataGridHeaderRenderer">
    <Setter Property="Background" Value="{DynamicResource ThemeBackgroundBrush}" />
  </Style>
  <Style Selector="local|XDataGrid">
    <Setter Property="Background" Value="{DynamicResource ThemeBackgroundBrush}" />
    <Setter Property="BorderThickness" Value="1" />
    <Setter Property="Template">
      <ControlTemplate>
        <Grid>
          <ScrollViewer Name="h_scroller" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Disabled">
            <DockPanel x:Name="PART_Dock" LastChildFill="True">
              <Grid DockPanel.Dock="Top" VerticalAlignment="Top" HorizontalAlignment="Stretch">
                <local:XDataGridHeaderRenderer HeaderDescriptors="{TemplateBinding HeaderDescriptors}"/>
              </Grid>
              <ScrollViewer Name="v_scroller" HorizontalScrollBarVisibility="Hidden" VerticalScrollBarVisibility="Visible">
                <ItemsRepeater Name="PART_Repeater" Items="{TemplateBinding Items}">
                  <ItemsRepeater.ItemTemplate>
                    <DataTemplate>
                      <StackPanel>
                        <local:XDataGridRowRenderer HeaderDescriptors="{TemplateBinding HeaderDescriptors}" DataContext="{Binding}"/>
                        <TextBlock Text="{Binding Index}"/>
                      </StackPanel>
                    </DataTemplate>
                  </ItemsRepeater.ItemTemplate>
                  <ItemsRepeater.Layout>
                    <StackLayout Orientation="Vertical"/>
                  </ItemsRepeater.Layout>
                </ItemsRepeater>
              </ScrollViewer>
            </DockPanel>
          </ScrollViewer>
        </Grid>
      </ControlTemplate>
    </Setter>
  </Style>
</Styles>
