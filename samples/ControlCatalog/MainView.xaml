<UserControl xmlns="https://github.com/avaloniaui"
        xmlns:pages="clr-namespace:ControlCatalog.Pages"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="ControlCatalog.MainView"
        Background="{DynamicResource ThemeBackgroundBrush}"
        Foreground="{DynamicResource ThemeForegroundBrush}"
        FontSize="{DynamicResource FontSizeNormal}">
  <ScrollViewer>
    <ItemsRepeater MaxWidth="800" Items="{Binding Covers}" RenderOptions.BitmapInterpolationMode="Default">
      <ItemsRepeater.Layout>
        <UniformGridLayout MinItemWidth="200" MinItemHeight="200" Orientation="Horizontal" />
      </ItemsRepeater.Layout>
      <ItemsRepeater.ItemTemplate>
        <DataTemplate>
          <Border>
            <Panel Width="200" MinHeight="200">
              <Image Width="200" Stretch="UniformToFill" Source="{Binding }" />
            </Panel>
          </Border>
        </DataTemplate>
      </ItemsRepeater.ItemTemplate>
    </ItemsRepeater>
  </ScrollViewer>  
</UserControl>
