<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="ControlCatalog.Pages.AcrylicPage" >
  <Panel Background="Black" VerticalAlignment="Center" HorizontalAlignment="Center">
    
    <Panel.Styles>
      <Style Selector="Path">
        <Style.Animations>
          <Animation Duration="0:0:03" IterationCount="Infinite">
            <KeyFrame Cue="0%">
              <Setter Property="(RotateTransform.Angle)" Value="0"/>
            </KeyFrame>
            <KeyFrame Cue="100%">
              <Setter Property="(RotateTransform.Angle)" Value="360"/>
            </KeyFrame>
          </Animation>
        </Style.Animations>
      </Style>
    </Panel.Styles> 
    <Path Fill="Blue" Stroke="Red" StrokeLineCap="Flat"
          StrokeThickness="15">
      <Path.Data>
        
        <PathGeometry>
          <PathFigure IsClosed="False" > 
            <ArcSegment Size="100,100" IsLargeArc="True" SweepDirection="Clockwise" Point="{Binding Point}" />
           
          </PathFigure>
        </PathGeometry>
      </Path.Data>
    </Path>
  </Panel>
</UserControl>
